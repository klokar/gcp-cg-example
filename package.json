{
  "name": "gcp-cg-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src --ext .ts --config package.json",
    "start": "npm run build && node dist/index",
    "watch": "nodemon src/index.ts",
    "deploy": "gcloud run deploy fastify-api-klemen --image gcr.io/gcp-competence-group/fastify-api-klemen:latest --platform managed --region europe-central2",
    "docker:build": "docker build -t fastify-api-klemen .",
    "docker:tag": "docker tag fastify-api-klemen gcr.io/gcp-competence-group/fastify-api-klemen",
    "docker:push": "docker push gcr.io/gcp-competence-group/fastify-api-klemen"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klokar/gcp-cg-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/klokar/gcp-cg-example/issues"
  },
  "homepage": "https://github.com/klokar/gcp-cg-example#readme",
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.1.0",
    "fastify": "^4.14.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "no-console": "off"
    }
  }
}
